<apex:page contentType="text/html; charset=utf-8" sidebar="false" showHeader="false" standardStylesheets="false">
    <apex:stylesheet value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'css/style.css')}"/>
    <header>
        <table>
            <tr>
                <td><img id="logo" alt=""></img></td>
                <td><div id="title"></div></td>
            </tr>
        </table>
    </header>

    <div id="last-message">
        New message from <span id="last-message-author"></span><br/>
        <img id="last-message-photo" src=""></img>
    </div>

    <div id="last-attachment">
        <img id="last-attachment-image" src=""></img>
    </div>

    <div id="messages">
        <div id="spinner">
            <apex:image value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'img/spinner.gif')}" height="100"/>
        </div>
    </div>

    <apex:includescript value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'js/lib/jquery-1.8.2.min.js')}"/>
    <apex:includescript value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'js/lib/mustache.js')}"/>
    <apex:includescript value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'js/lib/dateFormat.js')}"/>
    <apex:includescript value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'js/ajax.js')}"/>
    <apex:includescript value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'js/util.js')}"/>
    <apex:includescript value="{!URLFOR($Resource.ChatterWallResourcesTms2014, 'js/app.js')}"/>
    <script>
        $j = jQuery.noConflict();
        $j(document).ready(function() {
            var groupId = '{!$CurrentPage.parameters.id}';
            var delay = '{!$CurrentPage.parameters.delay}';
            if (!delay) delay = 30000; else delay = delay * 1000;
            var conf = {
                updateDelay: delay,
                urls: {
                    jsonStream: '/apex/ChatterWallFeedProxyPage?core.apexpages.devmode.url=1',
                    messageTemplate: "{!URLFOR($Resource.ChatterWallResourcesTms2014, 'views/message.html')}",
                    commentTemplate: "{!URLFOR($Resource.ChatterWallResourcesTms2014, 'views/comment.html')}",
                    attachmentImagesUrl : '/apex/ChatterWallImageProxyPage?core.apexpages.devmode.url=1&id=IMAGE_ID&mimeType=IMAGE_MIMETYPE'
                }
            };
            if (groupId) {
                conf.urls.jsonStream += '&id=' + groupId;
            }

            var app = new Application(conf);
            app.run();
        });
    </script>
</apex:page>
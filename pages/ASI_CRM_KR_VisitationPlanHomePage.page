            var whereClause =   ' WHERE ASI_KOR_Visitation_Plan__r.OwnerId = \''+ CurrentUserId+ '\' and ASI_KOR_Wholesaler__c != null ';
            
            var Laststatement ='';
            Visualforce.remoting.Manager.invokeAction(

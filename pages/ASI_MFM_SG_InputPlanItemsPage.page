<apex:page standardController="ASI_MFM_Plan_Line_Item__c" extensions="ASI_MFM_SG_InputPlanItemsController" recordSetVar="planLineItems" sideBar="false">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type='text/javascript'>
    var originalWidth;
    var isIE = navigator.userAgent.toLowerCase().indexOf("msie");
        
    function SetWidthToAuto(drpLst){
         if (isIE > -1){             
             var ua = navigator.appVersion.indexOf("MSIE");
             version = parseFloat(navigator.appVersion.split("MSIE")[1]);
             //alert(version);  
             if(version < 9){
                 drpLst.style.width = 'auto'; 
             }
         }
         
    }    
    
    function ResetWidth(drpLst) {
         if (isIE > -1){            
             var ua = navigator.appVersion.indexOf("MSIE");
             version = parseFloat(navigator.appVersion.split("MSIE")[1]);  
             if(version < 9){                       
                 drpLst.style.width = '60px';
             }
         }
    }
    </script> 

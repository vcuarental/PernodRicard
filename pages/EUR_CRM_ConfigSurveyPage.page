              </apex:pageblockTable>
           </apex:outputPanel>
          </apex:pageBlockSection>
    </apex:pageblock>
        
    <apex:pageblock title="{!$Label.EUR_CRM_Survey_Questions}" id="survey_questions"  >
        <apex:outputLabel value="{!$Label.EUR_CRM_Survey_Question_Sequence_Info}"/><br/><br/>

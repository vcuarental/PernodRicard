<apex:page controller="ASI_MFM_SG_CustomSettingController" >
     <apex:pageMessages />
      <apex:form >
        <apex:pageBlock >
            <apex:pageBlock title="Tolerance">
                <apex:pageBlockSection >  
                    <apex:outputLabel >Tolerance</apex:outputLabel>
                    <apex:inputText value="{!Items.Tolerance}"/> 
                </apex:pageBlockSection>                            
            </apex:pageBlock>
           
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save" />
                  <apex:commandButton value="Refresh" action="{!refresh}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>
</style>
    
    
 <script>
 	function clkHandler(btn){};   
    Ext.onReady(function(){
	<apex:outputText value="CRUDFLSCheck# False Positive: No association to any sObject field." rendered="false" />;
    var grid = <apex:outputtext value="{!grid}" escape="false"/>;
    var storedData = grid.getStore();
    if(storedData.getCount() == 0)
    {
    	var msgIcon = Ext.MessageBox.INFO;//Default
    	Ext.MessageBox.show({
    	title:"{!JSENCODE($Label.Information)}",
    	msg:"{!JSENCODE($Label.msgNoRecordFoundSearchPage)}",
	    width:300,
       	buttons: Ext.MessageBox.OK,
        fn: clkHandler,
        icon: msgIcon
	   });
	   grid.enableHdMenu = false;
    }
    grid.render("gridPanel");
    });
 </script>
    <div id="gridPanel"></div>

<apex:page standardController="ASI_HK_CRM_Promotion__c" extensions="ASI_CRM_TW_MerchanTaskByPromotion_Ctrl" sidebar="false" doctype="html-5.0" title="{!IF(userLanguage=='zh_TW', '陳列結案總表', 'Merchandiser Task List For Finance')}">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>  
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <style>
        #content:hover {
            -webkit-transform: scale(15);
            -moz-transform: scale(15);
            -o-transform: scale(15);
            transform: scale(15);
            margin-left: -150px;
        }
        #content {
            -webkit-transition: all .4s ease-in-out;
            -moz-transition: all .4s ease-in-out;
            -o-transition: all .4s ease-in-out;
            -ms-transition: all .4s ease-in-out;
            margin-left: 0px;
        }
    </style>
    <script type="text/javascript">
    function noenter(ev)  {
          if (window.event && window.event.keyCode == 13 || ev.which == 13) {
              doSearchName();
              return false;
           } else {
                return true;
           }
       }
    
    </script>
    <apex:actionStatus id="LoadingStatus" >
        <apex:facet name="start">
            <c:ASI_CRM_TW_LoadingStatus BackColor="#ffffff"
                                    borderColor="#6B6B6B"
                                    borderSize="1"
                                    height="50px"
                                    width="150px"
                                    margintop="-25px"
                                    marginleft="-60px"
                                    ImageUrl="{!$Resource.loadingStatus}"
                                    Message="Please Wait..."/>
        </apex:facet>
    </apex:actionStatus>
    
    <apex:form >
        <apex:sectionHeader subtitle="{!IF(userLanguage=='zh_TW', '陳列結案總表', 'Merchandiser Task List For Finance')}" title="　"/>
        <apex:pageMessages id="msg"/>

        <apex:pageBlock id="headerBlock">
            <apex:pageBlockSection >
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!IF(userLanguage=='zh_TW', '活動代號 / 活動名稱', 'Promotion Code / Promotion Name')}"/>
                    <apex:outputText value="{!promoCodeAndName}"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!IF(userLanguage=='zh_TW', '總口數', 'Total Number of Units')}"/>
                    <apex:outputText value="{!totalNumOfUnit}"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!IF(userLanguage=='zh_TW', '開始日期', 'Start Date')}"/>
                    <apex:outputField value="{!promo.ASI_HK_CRM_Promotion_Start_Date__c}"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!IF(userLanguage=='zh_TW', '結束日期', 'End Date')}"/>
                    <apex:outputField value="{!promo.ASI_HK_CRM_Promotion_End_Date__c}"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
        
        <apex:pageBlock id="wholeBlock">
        <apex:pageBlockSection title="{!IF(userLanguage=='zh_TW', '尋找結案', 'Find Merchandiser Task')}" id="criteria" columns="1">
        <apex:pageBlockSectionItem >
                        <apex:outputPanel layout="block">
                        <table>
                        <tr> 
                            <td style="vertical-align:top; font-weight: bold;">
                            {!$ObjectType.ASI_CRM_Merchandiser_Task__c.Fields.ASI_CRM_Task__c.Label}&nbsp;
                            </td>
                            <td>
                            <apex:selectList style="width:150px;" value="{!searchTaskType}" size="3" multiselect="true">
                            <apex:selectOptions value="{!TaskList}" ></apex:selectOptions>
                            </apex:selectList>&nbsp;&nbsp;
                            </td>
                            <td style="vertical-align:top; font-weight: bold;">
                            {!$ObjectType.ASI_CRM_Promotion_Status__c.Fields.ASI_CRM_Region__c.Label}&nbsp;
                            </td>
                            <td>
                            <apex:SelectList style="width:150px;" value="{!searchRegion}"  size="5" multiselect="true" > 
                            <apex:selectOptions value="{!RegionList}" />
                            </apex:SelectList>&nbsp;&nbsp;
                            </td>
                            <td style="vertical-align:top; font-weight: bold;">
                            {!$ObjectType.ASI_HK_CRM_Promotion__c.Fields.ASI_CRM_Channel__c.Label}&nbsp;
                            </td>
                            <td>
                            <apex:SelectList style="width:150px;" value="{!searchChannel}"  size="5" multiselect="true" > 
                            <apex:selectOptions value="{!ChannelList}" />
                            </apex:SelectList>&nbsp;&nbsp;
                            </td>
                            <td style="vertical-align:top; font-weight: bold;">
                            {!$ObjectType.ASI_CRM_Merchandiser_Task__c.Fields.ASI_CRM_Done__c.Label}&nbsp;
                            </td>
                            <td>
                            <apex:SelectList style="width:150px;" value="{!searchDone}"  size="2" multiselect="true" > 
                            <apex:selectOptions value="{!DoneList}" />
                            </apex:SelectList>&nbsp;&nbsp;
                            </td>
                            <td>
                            <apex:commandButton value="Search" action="{!ViewSearch}" rendered="{!userLanguage=='en_US'}"/>                            
                            <apex:commandButton value="搜索" action="{!ViewSearch}" rendered="{!userLanguage=='zh_TW'}"/>&nbsp;
                            <apex:commandButton value="Reset" action="{!initial}" rendered="{!userLanguage=='en_US'}"/>
                            <apex:commandButton value="重置" action="{!initial}" rendered="{!userLanguage=='zh_TW'}"/>
                            <apex:commandButton value="Report for Print" onclick="window.open('/{!reportForPrintid + '?pv0=' + promo.Name}','_blank')"/>
                            </td>
                         </tr>
                         </table>
                        </apex:outputPanel> 
                       </apex:pageBlockSectionItem>
                        </apex:pageBlockSection>                        
                    
            <apex:pageBlockButtons location="bottom">                     
                <apex:outputPanel layout="block">    
                    <apex:commandButton action="{!Beginning}" title="{!IF(userLanguage=='zh_TW', '首頁', 'First Page')}" value="{!IF(userLanguage=='zh_TW', '首頁', 'First Page')}" disabled="{!disablePrevious}" rerender="wholeBlock" status="LoadingStatus"/>
                    <apex:commandButton action="{!Previous}" title="{!IF(userLanguage=='zh_TW', '前頁', 'Previous')}" value="{!IF(userLanguage=='zh_TW', '前頁', 'Previous')}" disabled="{!disablePrevious}" rerender="wholeBlock" status="LoadingStatus"/>        
                    <apex:commandButton action="{!Next}" title="{!IF(userLanguage=='zh_TW', '後頁', 'Next')}" value="{!IF(userLanguage=='zh_TW', '後頁', 'Next')}" disabled="{!disableNext}" rerender="wholeBlock" status="LoadingStatus"/>
                    <apex:commandButton action="{!End}" title="{!IF(userLanguage=='zh_TW', '尾頁', 'Last Page')}" value="{!IF(userLanguage=='zh_TW', '尾頁', 'Last Page')}" disabled="{!disableNext}" rerender="wholeBlock" status="LoadingStatus"/>
                    <apex:outputText value="{!recordNumberDisplay}"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <apex:outputText value="{!IF(userLanguage=='zh_TW', '頁面 ', 'Page ')}"/>
                    <apex:input type="number" value="{!pageNum}" html-min="0" html-max="{!totalpageNum}" style="width:40px"  id="pageNum">
                        <apex:actionSupport event="onchange" action="{!pageRedirect}" rerender="msg, wholeBlock" status="LoadingStatus"></apex:actionSupport>
                    </apex:input>
                    <apex:outputText value="{!IF(userLanguage=='zh_TW', ' 共 ', ' of ')}"/>
                    <apex:outputText value="{!intTotalpageNum}"/>
                    <apex:outputText value="頁" rendered="{!userlanguage=='zh_TW'}"/>
                </apex:outputPanel>
            </apex:pageBlockButtons>
            
            <apex:pageblocktable value="{!mapMerchanTasks}" var="itm" width="100%">
                <apex:column >
                    <apex:facet name="header">{!IF(userLanguage=='zh_TW', 'No.', 'No.')}</apex:facet>
                    <apex:outputText value="{!((pageNum-1)*10)+itm+1}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Promotion_Status__c.fields.ASI_CRM_JDE_Account_Number__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Promotion_Status__r.ASI_CRM_JDE_Account_Number__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Promotion_Status__c.fields.ASI_CRM_Account__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Promotion_Status__r.ASI_CRM_Account__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_Outlet_Image__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Outlet_Image__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_Outlet_Type__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Outlet_Type__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_Grade__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Grade__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_Unit__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Unit__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_Supplier__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Supplier__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_Task__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Task__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_Done__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_Done__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!$ObjectType.ASI_CRM_Merchandiser_Task__c.fields.ASI_CRM_PDF__c.label}</apex:facet>
                    <apex:outputField value="{!mapMerchanTasks[itm].mTask.ASI_CRM_PDF__c}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!IF(userLanguage=='zh_TW', '圖片1', 'Image 1')}</apex:facet>
                    <apex:variable var="image1" value="" rendered="{!mapMerchanTasks[itm].imageURL1!=NULL}">
                        <a href="{!mapMerchanTasks[itm].imageURL1}" target="_blank"><image src="{!mapMerchanTasks[itm].imageURL1}" id="content" style="border-radius:1px;width:25px;height:25px;"/></a>
                    </apex:variable>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!IF(userLanguage=='zh_TW', '圖片2', 'Image 2')}</apex:facet>
                    <apex:variable var="image2" value="" rendered="{!mapMerchanTasks[itm].imageURL2!=NULL}">
                        <a href="{!mapMerchanTasks[itm].imageURL2}" target="_blank"><image src="{!mapMerchanTasks[itm].imageURL2}" id="content" style="border-radius:1px;width:25px;height:25px;"/></a>
                    </apex:variable>                    
                </apex:column>
                <!--Added by Kevani Chow@Introv 27/4/2016 (for display 4 images)-->
                <apex:column >
                    <apex:facet name="header">{!IF(userLanguage=='zh_TW', '圖片3', 'Image 3')}</apex:facet>
                    <apex:variable var="image3" value="" rendered="{!mapMerchanTasks[itm].imageURL3!=NULL}">
                        <a href="{!mapMerchanTasks[itm].imageURL3}" target="_blank"><image src="{!mapMerchanTasks[itm].imageURL3}" id="content" style="border-radius:1px;width:25px;height:25px;"/></a>
                    </apex:variable>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">{!IF(userLanguage=='zh_TW', '圖片4', 'Image 4')}</apex:facet>
                    <apex:variable var="image4" value="" rendered="{!mapMerchanTasks[itm].imageURL4!=NULL}">
                        <a href="{!mapMerchanTasks[itm].imageURL4}" target="_blank"><image src="{!mapMerchanTasks[itm].imageURL4}" id="content" style="border-radius:1px;width:25px;height:25px;"/></a>
                    </apex:variable>
                </apex:column>
            </apex:pageblocktable>
        </apex:pageBlock>
    </apex:form>
</apex:page>
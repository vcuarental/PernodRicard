    border-radius: 4px;
    box-shadow: 0 0 5px rgba(0,0,0,0.9);
    z-index: 9999;
}
 
.closeButton  {
    cursor: pointer;
    border: 1px solid #333;
    padding: 2% 5%;
    background: #a9e7f9; /* fallback */

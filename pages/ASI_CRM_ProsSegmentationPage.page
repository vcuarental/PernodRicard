        width:50%;
    }

.activeTab {
    background-color: #EBF5F4; 
    color:black; 
    font-weight:bold;
    background-image:none;
}
.inactiveTab { 
    background-color: #CEECF5; color:black; 
    background-image:none}
.tabContent{
    background-color: #EBF5F4;
}   


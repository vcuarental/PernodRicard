<style type="text/css">
.customPopup {
    background-color: white;
    border-style: solid;
    border-width: 2px;
    padding: 5px;
    position: absolute;
    z-index: 9999;
    margin-left:auto;
    margin-right:auto;
    width:auto;
    top: 20%;
}

.overlay-bg {
    display:none;
    position: fixed;
    top: 0;
    left: 0;
    height:100%;
    width: 100%;
    background: #000; /* fallback */

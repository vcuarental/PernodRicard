    function fileChosen(fileChosenEvent, parentRecId, pType) {
        
        // Get file
        file = fileChosenEvent.files[0];
        
        // Is it an image?
        if(!file.type.match('image')) {
            alert('Must use an image! Received: ' + file.type);
            return;
        }
        console.log(file);
        
        if(file.size <= maxFileSize) {

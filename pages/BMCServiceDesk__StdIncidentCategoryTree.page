<apex:page standardController="BMCServiceDesk__Incident__c" showHeader="false" standardStylesheets="false" extensions="BMCServiceDesk.StdIncidentCategoryExtension">
<style>
.lookupIconLaunchForm {
    background-image: url("{!URLFOR($Resource.SDEFStyles, 'SDEFbuttons/b_launch_form_on.gif')}");
    vertical-align: top;
    padding-left: 5px;
    width: 19px;
    height: 19px;
    margin: 0px;
    padding: 0px;
    border: 0px;
}
</style>
<apex:form id="incidentForm" target="_parent" >
    <table>
        <tr>
            <td class="lookupIconTD">
                <div>
                    <input type="button" id="categoryIconBtn" class="lookupIconLaunchForm" onclick="openCategoryTree()" tabindex="512" title="{!JSENCODE($Label.CategoryTree)}"/>
                </div>
            </td>
        </tr>   
    </table>
    <apex:actionFunction name="refreshRecord" action="{!cancel}"/>
    <apex:actionFunction name="calculateDueDate" action="{!calculateDueDate}" oncomplete="refreshRecord();" >
    	<apex:param assignTo="{!selectOption}" name="option" value=""/>
    </apex:actionFunction>
</apex:form>
<script> 
var recordId = '{!JSENCODE(incident.Id)}';
var state = '{!incident.State__c}';  
var incType = '{!JSENCODE(incident.Type__c)}';
var popupId = 'incident';
var objectName='{!JSENCODE('Incident__c')}';
var page_CategoryTree = '{!$Page.StdLayoutCategoryTree}';
var serviceRequestLabel = '{!JSENCODE($Label.ServiceRequestLabel)}';
var showPopUp = '{!showDueDatePopUp}';
 
window.onload = function(){
    if(showPopUp!='' && showPopUp!='null' && showPopUp == 'true'){
        if(window.showModalDialog) {    
            window.showModalDialog("/apex/RecalculateDueDate?incidentId="+recordId+"&stdLayout=true",this,"dialogWidth:400px; dialogHeight:150px; dialogLeft:400px; dialogTop:300px; resizable:no; scroll:no; status:no; center:yes");           
        } else {
            window.open('/apex/RecalculateDueDate?incidentId='+recordId+'&stdLayout=true','_blank','width=300,height=150,left=400,top=300,status=no,,modal=yes');            
        }
    }       
}
</script>
<script src="{!$Resource.BMCRFCommonJS}/StdLayoutCommon.js"/>
</apex:page>
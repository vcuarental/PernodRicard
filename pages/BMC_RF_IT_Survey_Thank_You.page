<apex:page standardController="BMCServiceDesk__Survey__c" showHeader="false" showChat="false" sidebar="false" id="mainPage"> 
<style>
    body {
        background-image: url("{!URLFOR($Resource.BMC_RF_IT_Survey, 'background.jpg')}");
        background-repeat: no-repeat; 
        background-position: center center;
        background-attachment: fixed;
        background-size: cover;
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    div.overlay {
        border-style:solid;border-width:2px; 
        border-color:white;
        border-top-left-radius:10px;
        border-top-right-radius:10px;
        border-bottom-left-radius:10px;
        border-bottom-right-radius:10px;
        opacity:0.85;        
        margin: auto;
        position: absolute; 
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
        color: black; 
        font-weight: bold; 
        text-align: center;
        padding: 20px;
        background: white
    }
</style>

<div class="overlay">
    <apex:form id="mainForm">
        <apex:image url="{!URLFOR($Resource.BMC_RF_IT_Survey, 'Survey_Success.png')}"/>
        
        <br></br>
        <br></br>
        
        <center>
            <H1 style="font-size:24px; color:#797979; font-family:'Tahoma', Geneva, sans-serif;">Thank you for your  time and feedback!</H1>
            <br></br>
            <H2 style="font-size:16px; color:#797979; font-family:'Tahoma', Geneva, sans-serif;">You can close this page now.</H2>
            <br></br>
        </center>
        
    </apex:form>
</div>

</apex:page>
<messaging:emailTemplate subject="{!IF(RelatedTo.ASI_MFM_Sys_Rejected__c, '(Re-submit) ', '')}A MFM Plan-<{!RelatedTo.Name}> Application is pending for approval" recipientType="User" relatedToType="ASI_MFM_Plan__c"><messaging:htmlEmailBody ><p>Please note the following Plan Application is waiting for your approval.</p><br/><table style="border-spacing: 0px;border: 0.1px solid;"><tr>    <td width="150px" style="border: 0.1px solid;">Owner: </td>    <td width="150px" style="border: 0.1px solid;text-align:left;">{!RelatedTo.Owner.Name}</td></tr><tr>    <td style="border: 0.1px solid;">Plan ID: </td>    <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.Name}</td></tr><tr>    <td style="border: 0.1px solid;">Plan Name: </td>    <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.ASI_MFM_Plan_Name__c}</td></tr><tr>    <td style="border: 0.1px solid;">Plan Description: </td>    <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.ASI_MFM_Plan_Description__c}</td></tr><tr>    <td style="border: 0.1px solid;">Fiscal Year: </td>    <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.ASI_MFM_Fiscal_year__c}</td></tr><tr>    <td style="border: 0.1px solid;">Plan Start Date: </td>    <td style="border: 0.1px solid;text-align:left;">        <apex:outputText value="{0,date, M/d/yyyy}">            <apex:param value="{!RelatedTo.ASI_MFM_Start_Date__c}"/>        </apex:outputText>    </td></tr><tr>    <td style="border: 0.1px solid;">Plan End Date: </td>    <td style="border: 0.1px solid;text-align:left;">        <apex:outputText value="{0,date, M/d/yyyy}">            <apex:param value="{!RelatedTo.ASI_MFM_End_Date__c}"/>        </apex:outputText>    </td></tr><tr>    <td style="border: 0.1px solid;">Plan Raised Date: </td>    <td style="border: 0.1px solid;text-align:left;">        <apex:outputText value="{0,date, M/d/yyyy}">            <apex:param value="{!RelatedTo.ASI_MFM_Plan_Raised_Date__c}"/>        </apex:outputText>    </td></tr><tr>    <td style="border: 0.1px solid;">Currency: </td>    <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.ASI_MFM_Currency__c}</td></tr><tr>    <td style="border: 0.1px solid;">Plan Amount: </td>    <td style="border: 0.1px solid;text-align:left;">        <apex:outputText value="{0, number, ###,###,###,###,##0}">            <apex:param value="{!RelatedTo.ASI_MFM_Plan_Amount__c}"/>        </apex:outputText>    </td></tr><tr>    <td style="border: 0.1px solid;">Plan Quarterly Status: </td>    <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.ASI_MFM_Plan_Quarterly_Status__c}</td></tr><tr>    <td style="border: 0.1px solid;">Exp. Vol. Total: </td>    <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.ASI_MFM_Expected_Volume_Total__c}</td></tr><tr>    <td style="border: 0.1px solid;">Target Sector: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Target_Sector__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Objectives Quantified: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Objectives_Quantified__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Mechanics: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Mechanics__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Media Support: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Media_Support__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Consumer Benefit: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Consumer_Benefit__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Objectives Others: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Objectives_Others__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">POS/POP: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_POS_POP__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Trade Benefit: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Trade_Benefit__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Reference 1: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Reference_1__c}"/></td></tr><tr>    <td style="border: 0.1px solid;">Reference 2: </td>    <td style="border: 0.1px solid;text-align:left;"><apex:outputField value="{!RelatedTo.ASI_MFM_Reference_2__c}"/></td></tr><apex:outputText rendered="{!NOT(isBlank(RelatedTo.ASI_MFM_Sys_Reject_Comments__c))}">    <tr>        <td style="border: 0.1px solid;">{!if(isBlank(RelatedTo.ASI_MFM_Sys_Reject_Comments__c), null, "Previous Reject Comments:")} </td>        <td style="border: 0.1px solid;text-align:left;">{!RelatedTo.ASI_MFM_Sys_Reject_Comments__c}</td>    </tr></apex:outputText></table><br/><p>To approve, click this <apex:outputLink value="{!LEFT($Api.Partner_Server_URL_140, FIND('.com/',$Api.Partner_Server_URL_140)+3)}/{!RelatedTo.id}"> link</apex:outputLink> or by reply this email with keywords - APPROVE, YES, REJECT, NO.</p></messaging:htmlEmailBody><messaging:attachment renderAs="PDF"  filename="{!RelatedTo.name}"><c:ASI_MFM_TW_Plan_PDF_Compt rendered="{! AND(RelatedTo.ASI_MFM_Sys_Plan_Type__c != 'Trade A&P and A&D Plan',RelatedTo.ASI_MFM_Sys_Plan_Type__c != 'Mixed Plan')}" headId="{!RelatedTo.Id}"/><c:ASI_MFM_TW_Plan2In1PDF_Compt rendered="{!RelatedTo.ASI_MFM_Sys_Plan_Type__c == 'Trade A&P and A&D Plan'}" headId="{!RelatedTo.Id}"/><c:ASI_MFM_TW_Plan2In1PDF_Compt3 rendered="{!RelatedTo.ASI_MFM_Sys_Plan_Type__c == 'Mixed Plan'}" headId="{!RelatedTo.Id}"/></messaging:attachment></messaging:emailTemplate>
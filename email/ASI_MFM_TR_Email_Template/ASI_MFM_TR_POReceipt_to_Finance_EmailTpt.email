<messaging:emailTemplate subject="PO Receipt Notification Email" recipientType="User" relatedToType="ASI_MFM_PO_Receipt__c"><messaging:htmlEmailBody >Please refer to the PO Receipt <apex:outputLink value="{!LEFT($Api.Partner_Server_URL_140, FIND('.com/',$Api.Partner_Server_URL_140)+3)}/{!RelatedTo.id}"> {!relatedto.Name}</apex:outputLink><br /><br /><table width="100%" border="0" cellpadding="2" cellspacing="0">    <tr>        <td width="24%">PO Receipt ID:</td>        <td width="24%">{!relatedto.Name}</td>        <td width="4%">&nbsp;</td>        <td width="24%">Owner:</td>        <td width="24%">{!relatedto.Owner.Name}</td>    </tr>    <tr>        <td>PO Receipt Date:</td>        <td><apex:outputText value="{0,date, dd/MM/yyyy}" ><apex:param value="{!relatedto.ASI_MFM_Receipt_Date__c}" /></apex:outputText></td>        <td>&nbsp;</td>        <td>Status:</td>        <td>{!relatedto.ASI_MFM_Status__c}</td>    </tr>    <tr>        <td>Amount:</td>        <td colspan="3"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!relatedto.ASI_MFM_Amount__c}" /></apex:outputText></td>    </tr>    <tr>        <td>Remarks:</td>        <td colspan="3">{!relatedto.ASI_MFM_Remarks__c}</td>    </tr></table><br /><table width="100%" border="1" cellpadding="2" cellspacing="0">    <tr>        <th>Item</th>        <th>PO</th>        <th>PO Line Item</th>        <th>PO Supplier</th>        <th>Sub-brand Code</th>        <th>Description</th>        <th>Receipt Amount</th>        <th>Amount</th>    </tr>    <apex:repeat value="{!relatedto.PO_Receipt_Items__r}" var="itm">    <tr>        <td width="10%">{!itm.Name}</td>        <td width="10%">            <apex:outputLink value="{!LEFT($Api.Partner_Server_URL_140, FIND('.com/',$Api.Partner_Server_URL_140)+3)}/{!itm.ASI_MFM_PO__c}">{!itm.ASI_MFM_PO__r.Name}</apex:outputLink></td>        <td width="10%">{!itm.ASI_MFM_PO_Line_Item__r.Name}</td>        <td width="20%">{!itm.ASI_MFM_PO_Line_Item__r.ASI_MFM_PO__r.ASI_MFM_Supplier_Name__r.Name}</td>        <td width="20%">{!itm.ASI_MFM_Sub_brand_temp__r.Name}</td>        <td width="10%">{!itm.ASI_MFM_List_Item_Description__c}</td>        <td width="10%" align="right"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!itm.ASI_MFM_Amount__c}" /></apex:outputText></td>        <td width="10%" align="right"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!itm.ASI_MFM_PO_Line_Item_Receipt_Amount__c}"/></apex:outputText></td>    </tr>    </apex:repeat>    <tr>        <td colspan="7" align="right">Total:</td>        <td align="right"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!relatedto.ASI_MFM_Amount__c}" /></apex:outputText></td>    </tr></table><apex:outputText value="{!relatedto.id}" rendered="false" /><apex:outputText value="{!relatedto.name}" rendered="false" /><apex:outputText value="{!relatedto.ASI_MFM_Amount__c}" rendered="false" /><apex:outputText value="{!relatedto.ASI_MFM_Status__c}" rendered="false" /><apex:outputText value="{!relatedto.ASI_MFM_Remarks__c}" rendered="false" /><apex:outputText value="{!relatedto.ASI_MFM_PO_Type__c}" rendered="false" /><apex:outputText value="{!relatedto.ASI_MFM_Receipt_Date__c}" rendered="false" /><apex:outputText value="{!relatedto.Owner.Name}" rendered="false" /><apex:outputText value="{!relatedto.PO_Receipt_Items__r}" rendered="false" /></messaging:htmlEmailBody></messaging:emailTemplate>
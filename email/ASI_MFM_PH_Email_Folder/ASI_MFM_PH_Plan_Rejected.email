<messaging:emailTemplate subject="Notification of Plan #{!RelatedTo.Name} Application is rejected " recipientType="User" relatedToType="ASI_MFM_Plan__c"><messaging:htmlEmailBody ><html>    <body>        <p>       Please note that the following MFM Plan: <apex:outputLink value="{!LEFT($Api.Partner_Server_URL_140, FIND('.com/',$Api.Partner_Server_URL_140)+3)}/{!RelatedTo.id}">{!RelatedTo.Name}                </apex:outputLink> is rejected.        </p>                <p><strong>Details:</strong>        </p>        <table>           <tr>               <td>Owner:</td>               <td>{!RelatedTo.ASI_MFM_Owner__c}</td>           </tr>           <tr>                <td>Plan ID: </td>                <td>{!RelatedTo.Name}</td>            </tr>           <tr>                <td>Plan Name:</td>                <td>{!RelatedTo.ASI_MFM_Plan_Name__c}</td>            </tr>            <tr>                <td>Plan Description:</td>                <td>{!RelatedTo.ASI_MFM_Plan_Description__c}</td>            </tr>            <tr>                <td>Fiscal Year:</td>                <td>{!RelatedTo.ASI_MFM_Fiscal_year__c}</td>            </tr>            <tr>                <td>Plan Start Date:</td>                <td><apex:outputText value="{0,date,MM/dd/yyyy}">                    <apex:param value="{!RelatedTo.ASI_MFM_Start_Date__c}" />                   </apex:outputText></td>            </tr>            <tr>                <td>Plan End Date:</td>                <td><apex:outputText value="{0,date,MM/dd/yyyy}">                           <apex:param value="{!RelatedTo.ASI_MFM_End_Date__c}" />                   </apex:outputText></td>           </tr>            <tr>                <td>Plan Raised Date:</td>                <td><apex:outputText value="{0,date,MM/dd/yyyy}">                           <apex:param value="{!RelatedTo.ASI_MFM_Plan_Raised_Date__c}" />                   </apex:outputText></td>           </tr>            <tr>                <td>Currency:</td>                <td>{!RelatedTo.ASI_MFM_Currency__c}</td>           </tr>            <tr>                <td>Plan Amount:</td>                <td><apex:outputText value="{0, number, ###,###,###,###,##0.00}"><apex:param value="{!RelatedTo.ASI_MFM_Plan_Amount__c}" /></apex:outputText> </td>           </tr>            <tr>           </tr> </table>    </body></html></messaging:htmlEmailBody></messaging:emailTemplate>
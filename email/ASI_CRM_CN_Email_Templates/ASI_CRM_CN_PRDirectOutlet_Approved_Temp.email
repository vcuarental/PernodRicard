<messaging:emailTemplate subject="{!relatedto.Name} PR Direct outlet application has been final approved" recipientType="User" relatedToType="ASI_CRM_AccountsAdditionalField__c"><messaging:htmlEmailBody ><style>body{     font-family: Arial Unicode MS;     font-size: 12px; }table{     font-family: Arial Unicode MS;     font-size: 12px;}</style><body>You have a new PR Direct outlet application, approved by {!$User.FirstName} {!$User.LastName}.  <br/>    Pls. create JDE code for {!relatedto.Name}.     <br/><br/><table border="1" style="border:5px black;border-collapse:collapse;"><tr>    <td width="25%" valign="top"><b>CRM Code</b></td>    <td width="25%" valign="top" align="right">{!relatedto.ASI_CRM_CN_CRM_Code__c}</td>    <td valign="top" width="25%"><b>Outlet Name</b></td>    <td valign="top" width="25%" align="right">{!relatedto.ASI_CRM_CN_Chi_Name__c}&nbsp; {!relatedto.ASI_CRM_CN_Eng_Name__c}</td></tr><tr>    <td valign="top" width="25%"><b>Commercial Team</b></td>    <td valign="top" align="right">{!relatedto.ASI_CRM_CN_Commercial_Team__c}</td>    <td colspan="2"></td></tr><tr>    <td valign="top" width="25%"><b>Register Name</b></td>    <td valign="top" width="25%" align="right">{!relatedto.ASI_CRM_CN_Legal_Name__c}</td>    <td valign="top" width="25%"><b>Address</b></td>    <td valign="top" width="25%" align="right">{!relatedto.ASI_CRM_CN_Address_PR_Direct__c}</td></tr><tr>    <td valign="top" width="25%"><b>Region/City</b></td>    <td valign="top" width="25%" align="right">{!relatedto.ASI_CRM_CN_CCity__r.ASI_CRM_English_Name__c}&nbsp;{!relatedto.ASI_CRM_CN_Region_Eng_Name__c}</td>    <td valign="top" width="25%"><b>Tel</b></td>    <td valign="top" width="25%" align="right">{!relatedto.ASI_CRM_CN_Phone_Number_PR_Direct__c}</td>    </tr><tr>    <td valign="top" ><b>Bank</b></td>    <td valign="top"  align="right">{!relatedto.ASI_CRM_CN_Bank__c}</td>    <td valign="top" ><b>Bank Account</b></td>    <td valign="top"  align="right">{!relatedto.ASI_CRM_CN_Bank_account__c}</td></tr><tr>         <td width="25%" valign="top"><b>Tax Registration Number</b></td>    <td width="25%" valign="top" align="right">{!relatedto.ASI_CRM_CN_Tax_registration_number__c}</td>    <td width="25%" valign="top"><b>Business License uploading (Y)</b></td>    <td width="25%" valign="top" align="right">{!if(relatedto.ASI_CRM_CN_BusinessLicenseUploading__c=True, "Y", "N")}</td></tr><tr>      <td valign="top" ><b>VAT Invoice Type</b></td>    <td valign="top"  align="right">{!if(relatedto.ASI_CRM_CN_VAT_Invoice_application__c, "Normal", if(relatedto.ASI_CRM_VAT_Special_Invoice__c, "Special", ""))}</td>       <td valign="top" ><b>Business License Expire Date</b></td>    <td valign="top"  align="right"><apex:outputText value="{0, date,dd'/'MM'/'yyyy}">        <apex:param value="{!relatedto.ASI_CRM_CN_Business_License_Expire_date__c}"/></apex:outputText></td> </tr><tr>    <td valign="top" ><b>Proposed Credit Term (Days)</b></td>    <td valign="top"  align="right">{!relatedto.ASI_CRM_CN_Proposed_Credit_term_days__c}</td>    <td valign="top" ><b>Group name</b></td>    <td valign="top"  align="right">{!relatedto.ASI_CRM_CN_Group_Name_PR_Direct__c}</td></tr><tr>         <td valign="top" ><b>Estimated Annual Order Amount in CNY</b></td>    <td valign="top"  align="right"><apex:outputText value="{0, number, ###,###,###,###,##0.00}" >        <apex:param value="{!relatedto.ASI_CRM_CN_Estimated_annual_order_amount__c}"/></apex:outputText></td>    <td valign="top" ><b>Credit Limit in CNY</b></td>    <td valign="top"  align="right">{!relatedto.ASI_CRM_CN_Credit_Limit_in_CNY__c}</td> </tr></table><!--<br /><a href="{!LEFT($Api.Partner_Server_URL_140, FIND(".com/",$Api.Partner_Server_URL_140)+3)}/{!relatedto.id}">Open this WS Profile</a><br />--><apex:OutputField value="{!relatedto.id}" rendered="false" /><apex:OutputField value="{!relatedto.Name}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_CCity__r.Name}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Bank_account__c}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Bank__c}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Proposed_Credit_term_days__c}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Credit_Limit_in_CNY_Old__c}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Certificate_uploading__c}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Business_License_Expire_date__c}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_VAT_Invoice_application__c}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Brand_Lookup__r.Name}" rendered="false" /><apex:OutputField value="{!relatedto.ASI_CRM_CN_Effective_From__c}" rendered="false" /> </body></messaging:htmlEmailBody></messaging:emailTemplate>
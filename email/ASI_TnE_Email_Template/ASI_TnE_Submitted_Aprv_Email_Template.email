<messaging:emailTemplate subject="Notification of Travel & Expense #{!RelatedTo.Name} has submitted for approval" recipientType="User" relatedToType="ASI_TnE_ClaimHeader__c">    <messaging:htmlEmailBody >        <html>            <body>                <p>Please note the following Travel &amp; Expense document has been submitted for approval. Kindly refer attached PDF report for more details.</p>                <table>                    <tr>                        <td>Owner Name</td>                        <td>: &nbsp; {!$User.FirstName} {!$User.LastName}</td>                    </tr>                    <tr>                        <td>Payee Name</td>                        <td>: &nbsp; {!RelatedTo.ASI_TnE_Payee_Employee__r.Name}</td>                    </tr>                    <tr>                        <td>Claim Number</td>                        <td>: &nbsp; {!RelatedTo.Name}</td>                    </tr>                    <tr>                        <td>Claim Amount</td>                        <td>: &nbsp; <apex:outputText value="{0, number, ###,###,###,###.##}">                                <apex:param value="{!RelatedTo.ASI_TnE_Total_Amount_LCY__c}" />                            </apex:outputText> ({!RelatedTo.ASI_TnE_Currency__c})                        </td>                    </tr>                    <tr>                        <td>Department</td>                        <td>: &nbsp; {!RelatedTo.ASI_TnE_Department_Division__c}                        </td>                    </tr>                    <tr>                        <td>Business Unit</td>                        <td>: &nbsp; {!RelatedTo.ASI_TnE_Company__c}                        </td>                    </tr>                    <tr>                        <td>Type of Expense Claim</td>                        <td>: &nbsp; {!RelatedTo.ASI_TnE_Type__c}                        </td>                    </tr>                </table><p>Click this&nbsp;<apex:outputLink value="{!LEFT($Api.Partner_Server_URL_140, FIND('.com/',$Api.Partner_Server_URL_140)+3)}/{!RelatedTo.id}">link</apex:outputLink> for more information</p>            </body>        </html>    </messaging:htmlEmailBody>    <messaging:attachment renderAs="PDF"  filename="{!RelatedTo.name}"><c:ASI_TnE_ExpenseRptComponent headerId="{!RelatedTo.Id}" /></messaging:attachment></messaging:emailTemplate>
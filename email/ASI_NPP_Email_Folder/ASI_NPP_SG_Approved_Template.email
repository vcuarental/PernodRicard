<messaging:emailTemplate subject="NPP Approved Notification - {!RelatedTo.Name}" recipientType="User" relatedToType="ASI_NPP_New_Product_Promotion__c"><messaging:htmlEmailBody ><head> <style>table tr td { font-size:12px; font-family: 'Century Gothic', CenturyGothic, AppleGothic, sans-serif;}</style></head><span style="font-family: 'Century Gothic', CenturyGothic, AppleGothic, sans-serif;font-size:12px;">The following NPA was approved <apex:outputLink value="{!LEFT($Api.Partner_Server_URL_140, FIND('.com/',$Api.Partner_Server_URL_140)+3)}/{!RelatedTo.id}"> {!relatedto.Name}</apex:outputLink></span><br /><br /><table width="100%" border="0" cellpadding="2" cellspacing="0">    <tr>        <td width="24%">NPA ID:</td>        <td width="24%">{!RelatedTo.Name}</td>        <td width="4%">&nbsp;</td>        <td width="24%">Owner:</td>        <td width="24%">{!relatedto.Owner.Name}</td>    </tr></table><br /><table width="500px" border="0" cellpadding="2" cellspacing="0">    <tr>        <td width="50%">Product: </td>        <td width="50%">{!relatedto.ASI_NPP_Product__c}</td>    </tr>    <tr>        <td width="50%">Proposed CM: </td>        <td width="50%"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!relatedto.ASI_NPP_Percent_Contribution_Margin__c}" /></apex:outputText>%</td>    </tr>    <tr>        <td width="50%">Benchmark CM: </td>        <td width="50%"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!relatedto.ASI_NPP_Benchmark_CM__c}" /></apex:outputText>%</td>    </tr>    <tr>        <td width="50%">Contribution Margin Indicators: </td>        <td width="50%">{!relatedto.ASI_NPP_Contribution_Margin_Indicators__c}</td>    </tr>    <tr>        <td width="50%">Proposed CAAP: </td>        <td width="50%"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!relatedto.ASI_NPP_Percent_of_CAAP__c}" /></apex:outputText>%</td>    </tr>    <tr>        <td width="50%">Benchmark CAAP: </td>        <td width="50%"><apex:outputText value="{0,number,#,###,##0.00}"><apex:param value="{!relatedto.ASI_NPP_Benchmark_CAAP__c}" /></apex:outputText>%</td>    </tr>    <tr>        <td width="50%">CAAP Indicators: </td>        <td width="50%">{!relatedto.ASI_NPP_CAAP_Indicators__c}</td>    </tr></table></messaging:htmlEmailBody><messaging:attachment renderAs="PDF" filename="{!RelatedTo.Name + '_proposal.pdf'}">    <c:ASI_NPP_Proposal_PDF_Component NPP_id="{!RelatedTo.id}" /></messaging:attachment><messaging:attachment renderAs="PDF" filename="{!RelatedTo.Name + '_pnl.pdf'}">    <c:ASI_NPP_PnL_PDF_Component NPP_id="{!RelatedTo.id}" /></messaging:attachment></messaging:emailTemplate>
<messaging:emailTemplate subject="[Plann'R] - Récapitulatif hebdomadaire de vos actions en retard" recipientType="User" relatedToType="User">   <messaging:htmlEmailBody >      <html>          <apex:image url="{!$Resource.RIC_Logo}"  />      <br></br>   <br></br>   <br></br>            <font face="Arial">Bonjour {!recipient.firstname},</font>       <br></br>       <br></br>              <font face="Arial"> Vous trouverez ci-dessous un récapitulatif hebdomadaire des actions en retard. </font>              <br></br>              <font face="Arial"> Merci de modifier le statut de celles correspondant à des taches qui ont été réalisées. </font>            <br></br>   <br></br>   <br></br>                            <table width="100%" border="1" style="border-collapse: collapse;">            <col width="40%"/>            <col width="20%"/>            <col width="20%"/>            <col width="20%"/>            <tr>               <th bgcolor="#2E9AFE"><font face="Arial" size="3" >Action</font></th>               <th bgcolor="#2E9AFE"><font face="Arial" size="3" >Projet</font></th>               <th bgcolor="#2E9AFE"><font face="Arial" size="3" >Échéance</font></th>               <th bgcolor="#2E9AFE"><font face="Arial" size="3" >Retard (jrs)</font></th>            </tr>            <apex:repeat var="a" value="{!recipient.Project_Tasks_Assigned__r}">               <apex:outputPanel rendered="{!(or(a.Overall_Status__c == 'Late In Progress',a.Overall_Status__c == 'Late None') && a.RIC_Status__c = 'En cours' && a.Project_Milestone__r.Project__r.RecordType.DeveloperName!=$Label.RIC_PRF_OPP_ou_Kit_OPP)}">                  <tr>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.RIC_Link_To_Task__c}"/>                        </font>                     </td>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.Project__c}"/>                        </font>                     </td>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.Due_Date__c}"/>                        </font>                     </td>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.Days_Late_Formula__c}"/>                        </font>                     </td>                  </tr>               </apex:outputPanel>            </apex:repeat>            <apex:repeat var="a" value="{!recipient.Acteurs__r}">               <apex:outputPanel rendered="{!or(a.RIC_Action__r.Overall_Status__c == 'Late In Progress',a.RIC_Action__r.Overall_Status__c == 'Late None') && a.RIC_Action__r.RIC_Status__c = 'En cours' }">                  <tr>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.RIC_Action__r.RIC_Link_To_Task__c}"/>                        </font>                     </td>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.RIC_Action__r.Project__c}"/>                        </font>                     </td>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.RIC_Action__r.Due_Date__c}"/>                        </font>                     </td>                     <td align="center">                        <font face="Arial" size="2" >                           <apex:outputField value="{!a.RIC_Action__r.Days_Late_Formula__c}"/>                        </font>                     </td>                  </tr>               </apex:outputPanel>            </apex:repeat>         </table>      </html>   </messaging:htmlEmailBody></messaging:emailTemplate>
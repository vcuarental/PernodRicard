<messaging:emailTemplate subject="A {!relatedto.ASI_MFM_Plan_Type__c} Plan-<{!relatedto.Name}> was approved" recipientType="User"  relatedToType="ASI_MFM_Plan__c"><messaging:htmlEmailBody > <html>    <body>        <p>            Please note the following {!relatedto.asi_mfm_plan_type__c} Plan was approved.        </p>         <table>            <tr>                <td>                Owner:&nbsp;                </td>                <td>                 : {!RelatedTo.Owner.name}                </td>            </tr>            <tr>                <td>                Plan ID:&nbsp;                </td>                <td>                 : {!relatedto.Name}                </td>            </tr>            <tr>                <td>                Plan Name:&nbsp;                </td>                <td>                 : {!relatedto.ASI_MFM_Plan_Name__c}                </td>            </tr>            <tr>                <td>                Plan Description:&nbsp;                </td>                <td>                 : {!relatedto.ASI_MFM_Plan_Description__c}                </td>            </tr>            <tr>                <td>                Fiscal year:&nbsp;                </td>                <td>                 : {!relatedto.ASI_MFM_Fiscal_year__c}                </td>            </tr>            <tr>                <td>                Plan Start Date:&nbsp;                </td>                <td>                 :&nbsp; <apex:outputText value="{0,date,MM/dd/yyyy}">                           <apex:param value="{!relatedto.ASI_MFM_Start_Date__c}" />                   </apex:outputText>                </td>            </tr>            <tr>                <td>                Plan End Date:&nbsp;                </td>                <td>                 :&nbsp; <apex:outputText value="{0,date,MM/dd/yyyy}">                           <apex:param value="{!relatedto.ASI_MFM_End_Date__c}" />                   </apex:outputText>                </td>            </tr>            <tr>                <td>                Plan Raised Date:&nbsp;                </td>                <td>                 :&nbsp;<apex:outputText value="{0,date,MM/dd/yyyy}">                           <apex:param value="{!relatedto.ASI_MFM_Plan_Raised_Date__c}" />                   </apex:outputText>                </td>            </tr>                                    <tr>                <td>                Currency:&nbsp;                </td>                <td>                 : {!relatedto.ASI_MFM_Currency__c}                </td>            </tr>                        <tr>                <td>                Exchange Rate:&nbsp;                </td>                <td>                 :&nbsp;<apex:outputText value="{0,number,###,###,##0.00}">                     <apex:param value="{!relatedto.ASI_MFM_Exchange_Rate__c}" />                 </apex:outputText>                </td>            </tr>            <tr>                <td>                Plan Amount:&nbsp;                </td>                <td>                 :&nbsp;<apex:outputText value="{0,number,###,###,##0.00}">                     <apex:param value="{!relatedto.ASI_MFM_Plan_Amount__c}" />                 </apex:outputText>                </td>            </tr>            <tr>                <td>                {!if(isBlank(relatedto.ASI_MFM_Sys_Reject_Comments__c), null, "Previous Reject Comments:")}                </td>                <td>                 {!if(isBlank(relatedto.ASI_MFM_Sys_Reject_Comments__c), "", ":")} {!relatedto.ASI_MFM_Sys_Reject_Comments__c}                </td>            </tr>        </table>                            </body></html>  </messaging:htmlEmailBody>  </messaging:emailTemplate>
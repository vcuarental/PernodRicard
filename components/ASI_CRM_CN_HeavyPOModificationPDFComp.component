            <td valign="top" rowspan="2" style="border-right: 1px solid black; border-bottom: 1px solid black;"><apex:outputText value="{0,number,#,###,##0.00}%" rendered="{!ContractSelected.ASI_CRM_CN_Bottle_Collection_Rate__c!=null}" >
                    <apex:param value="{!ContractSelected.ASI_CRM_CN_Bottle_Collection_Rate__c}"/></apex:outputText></td>
        </tr>

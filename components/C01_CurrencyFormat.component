        <apex:attribute name="myValue" type="Decimal"  required="false" description="PreÃ§o"/>

        <apex:outputPanel rendered="{!ISNULL(myValue)}" >
        	<apex:outputText value="-" />
        </apex:outputPanel>
        <apex:outputPanel rendered="{!!ISNULL(myValue)}" >
	        <apex:variable var="roundedValue" value="{!myValue}" rendered="{!myValue>=0}" />
			<apex:variable var="roundedValue" value="{!-myValue}" rendered="{!myValue<0}" />


    </approvalStep>
    <emailTemplate>ASI_CRM_CN_Email_Templates/ASI_CRM_CN_IOM_Request_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>ASI_CRM_Image_Outlet_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>CN ON,CN OFF</value>
        </criteriaItems>
        <criteriaItems>
            <field>ASI_CRM_Image_Outlet_Request__c.ASI_CRM_Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>

<aura:component >
	<aura:attribute name="value" type="String" access="public"/>
	<aura:attribute name="label" type="String" access="public"/>
	<aura:attribute name="values" type="Map" access="public"/>
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
	<aura:handler name="change" value="{!v.value}" action="{!c.doInit}" />
	{!v.label}
</aura:component>
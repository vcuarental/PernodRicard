<aura:component >
  <aura:method name="toggle"
               action="{!c.toggle}"
               access="GLOBAL" />
  <aura:method name="show"
               action="{!c.show}"
               access="GLOBAL" />
  <aura:method name="hide"
               action="{!c.hide}"
               access="GLOBAL" />

      <div class="slds-spinner_container slds-hide"
           aura:id="spinnerId">
        <div style="top:5%;" class="slds-spinner--brand slds-spinner slds-spinner--large"
             role="alert" >
          <span class="slds-assistive-text">Loading</span>
          <div class="slds-spinner__dot-a"></div>
          <div class="slds-spinner__dot-b"></div>
        </div>
      </div>
</aura:component>
    <aura:attribute name="recordId" type="Id" />   
    <center>
        <lightning:button variant="brand" aura:id="showPDF" label="Show report PDF" onclick="{!c.showPDF}"/>
        &nbsp;
        &nbsp;
        <lightning:button variant="brand" aura:id="savePDF" label="Save report to salesforce" iconName="utility:download" iconPosition="left" onclick="{!c.savePDF}" />
    </center>
    
</aura:component>